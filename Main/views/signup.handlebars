<div class="container">
 
       <div class="signup_pic">
        <div class="signup_intro">Only a few steps away from your future!</div>
        <div class="picture1"></div>
        <div class="picture2"></div>
        <div class="picture3"></div>
        
            
        
</div>
        <form class="form signup_form">

            <div class="form_group">
                <label for="first_name-signup">First Name:</label>
                <input class="form-input" type="text" id="first_name-signup" />
            </div>

            <div class="form-group">
                <label for="last_name-signup">Last Name:</label>
                <input class="form-input" type="text" id="last_name-signup" />
            </div>
             <div class="form-group">
                <label for="preferred_pronoun-signup">Preferred Pronoun:</label>
                <select id="preferred_pronoun-signup" class="form-input"name="preferred_pronoun">
                    <option value=""></option>
                    <option value="He/Him">He/Him</option>
                    <option value="She/Her">She/Her</option>
                    <option value="They/Them">They/Them</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <div class="form-group">
                <label for="email-signup">Email:</label>
                <input class="form-input" type="text" id="email-signup" />
            </div>

            <div class="form-group">
                <label for="password-signup">Password:</label>
                <input class="form-input" type="password" id="password-signup" />
            </div>

            <div class="form-group">
                <label for="age-signup">Age:</label>
                <input class="form-input" type="age" id="age-signup" />
            </div>

            <div class="form-group">
                <label for="city-signup">City:</label>
                <input class="form-input" type="text" id="city-signup" />
            </div>

            <div class="form-group">
                <label for="hobbies-signup">Hobbies:</label>
                <input class="form-input" type="text" id="hobbies-signup" />
            </div>

            <div class="form-group">
                <label for="dating_friendship-signup">What are you looking for?</label>
                <select class="form-input" name="dating_friendship" id="dating_friendship-signup">
                    <option value=""></option>
                    <option value="dating">Dating</option>
                    <option value="friendship">Friendship</option>
                </select>
            </div>

            <div class="form-group">
                <label for="interested_in-signup">Interested In:</label>
                <select class="form-input" name="interested_in" id="interested_in-signup">
                    <option value=""></option>
                    <option value="He/Him">He/Him</option>
                    <option value="She/Her">She/Her</option>
                    <option value="They/Them">They/Them</option>
                    <option value="Any">Everyone</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <div class="form-group">
                <label for="beers_name-signup">Beers:</label>
                <select id="beers_name_signup" class="form-input"name="beers_name">
                    <option value=""></option>
                    <option value="">Lager</option>
                    <option value="">Pale Ale</option>
                    <option value="">Brown Ale</option>
                    <option value="">Wild and Sour Ales</option>
                    <option value="">Ciders</option>   
                    <option value="">Wheat Beer</option>
                    <option value="">India Pale Ale</option>
                    <option value="">Porter</option>
                    <option value="">Stout</option>
                    <option value="">Other</option>
                </select>
            </div>

            <div class="form-group">
                <label for="user_image-signup">Image</label>
                <input class="form-input" type="blob" id="user_image-signup"/>
            </div>

            <div class="form-group_btn">
                <button class="create_btn hvr-sweep-to-top" type="submit">Create Account</button>
            </div>
        </form>


</div>

<script src="/js/signup.js"></script>